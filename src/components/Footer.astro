---
/**
 * Footer Component
 * Dark-themed footer with links and social media
 */

import Container from './ui/Container.astro';
import Logo from './Logo.astro';

const currentYear = new Date().getFullYear();
---

<footer class="bg-dark py-16">
    <Container>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
            <!-- Brand Column -->
            <div class="md:col-span-1">
                <div class="flex items-center gap-2 mb-4">
                    <Logo variant="light" />
                    <span class="font-bold text-lg text-white">Anouar Boost</span>
                </div>
                <p class="text-sm text-white/70">Consultant SEO & E-commerce spécialisé Shopify pour TPE/PME françaises</p>
            </div>

            <!-- Services Column -->
            <div>
                <h3 class="font-bold text-base mb-4 text-white">Services</h3>
                <ul class="space-y-2 text-sm">
                    <li><a href="/services#audit" class="text-white/80 hover:text-electric-blue transition-colors">Audit SEO Technique</a></li>
                    <li><a href="/services#performance" class="text-white/80 hover:text-electric-blue transition-colors">Optimisation Performance</a></li>
                    <li><a href="/services#contenu" class="text-white/80 hover:text-electric-blue transition-colors">Stratégie de Contenu</a></li>
                    <li><a href="/services#netlinking" class="text-white/80 hover:text-electric-blue transition-colors">Netlinking</a></li>
                </ul>
            </div>

            <!-- Company Column -->
            <div>
                <h3 class="font-bold text-base mb-4 text-white">Entreprise</h3>
                <ul class="space-y-2 text-sm">
                    <li><a href="/cas-clients" class="text-white/80 hover:text-electric-blue transition-colors">Études de Cas</a></li>
                    <li><a href="/blog" class="text-white/80 hover:text-electric-blue transition-colors">Blog</a></li>
                    <li><a href="/contact" class="text-white/80 hover:text-electric-blue transition-colors">Contact</a></li>
                    <li><a href="/a-propos" class="text-white/80 hover:text-electric-blue transition-colors">À Propos</a></li>
                </ul>
            </div>

            <!-- Contact Column -->
            <div>
                <h3 class="font-bold text-base mb-4 text-white">Contact</h3>
                <ul class="space-y-2 text-sm text-white/70">
                    <li>France</li>
                    <li><a href="mailto:contact@anouarboost.fr" class="hover:text-electric-blue transition-colors">contact@anouarboost.fr</a></li>
                </ul>
                <!-- Social Media -->
                <div class="flex gap-4 mt-6">
                    <a
                        href="https://linkedin.com/in/anouar-boost"
                        target="_blank"
                        rel="noopener"
                        class="text-white/70 hover:text-electric-blue transition-colors"
                        aria-label="LinkedIn"
                    >
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                            <path
                                d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                            ></path>
                        </svg>
                    </a>
                    <a
                        href="https://twitter.com/anouarboost"
                        target="_blank"
                        rel="noopener"
                        class="text-white/70 hover:text-electric-blue transition-colors"
                        aria-label="Twitter"
                    >
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                            <path
                                d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"
                            ></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="border-t border-white/20 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-white/70">
            <p>© {currentYear} Anouar Boost. Tous droits réservés.</p>
            <div class="flex gap-6">
                <a href="/mentions-legales" class="hover:text-electric-blue transition-colors">Mentions Légales</a>
                <a href="/confidentialite" class="hover:text-electric-blue transition-colors">Confidentialité</a>
            </div>
        </div>
    </Container>
</footer>
