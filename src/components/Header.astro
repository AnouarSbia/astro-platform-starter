---
/**
 * Header Component
 * Navigation with logo, menu items, and CTA
 */

import Logo from './Logo.astro';
import Button from './ui/Button.astro';
import Container from './ui/Container.astro';

const navItems = [
    { text: 'Accueil', href: '/' },
    { text: 'Services', href: '/services' },
    { text: 'Cas Clients', href: '/cas-clients' },
    { text: 'Blog', href: '/blog' },
    { text: 'Contact', href: '/contact' }
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-fixed bg-white border-b border-light-grey">
    <Container>
        <nav class="flex items-center justify-between py-4 md:py-6">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-2 no-underline">
                <Logo />
                <span class="font-bold text-xl text-charcoal hidden sm:inline"> Anouar Boost </span>
            </a>

            <!-- Desktop Navigation -->
            <ul class="hidden md:flex items-center gap-8">
                {
                    navItems.map((item) => {
                        const isActive = currentPath === item.href;
                        return (
                            <li>
                                <a
                                    href={item.href}
                                    class={`
                  text-base font-medium transition-colors
                  ${isActive ? 'text-electric-blue border-b-2 border-electric-blue' : 'text-charcoal hover:text-electric-blue'}
                `}
                                >
                                    {item.text}
                                </a>
                            </li>
                        );
                    })
                }
            </ul>

            <!-- CTA Button -->
            <div class="hidden md:block">
                <Button variant="primary" href="/contact"> Audit Gratuit </Button>
            </div>

            <!-- Mobile Menu Button -->
            <button id="mobile-menu-button" class="md:hidden p-2 text-charcoal hover:text-electric-blue transition-colors" aria-label="Toggle menu">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </nav>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden pb-4">
            <ul class="flex flex-col gap-4">
                {
                    navItems.map((item) => {
                        const isActive = currentPath === item.href;
                        return (
                            <li>
                                <a
                                    href={item.href}
                                    class={`
                  block text-base font-medium transition-colors
                  ${isActive ? 'text-electric-blue' : 'text-charcoal hover:text-electric-blue'}
                `}
                                >
                                    {item.text}
                                </a>
                            </li>
                        );
                    })
                }
                <li class="pt-2">
                    <Button variant="primary" href="/contact" class="w-full"> Audit Gratuit </Button>
                </li>
            </ul>
        </div>
    </Container>
</header>

<script>
    // Mobile menu toggle
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    menuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
    });
</script>

<style>
    nav a.active {
        color: var(--color-electric-blue);
    }
</style>
