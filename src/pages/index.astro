---
/**
 * Home Page
 * Main landing page with all sections
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/home/HeroSection.astro';
import SocialProofSection from '../components/home/SocialProofSection.astro';
import PASSection from '../components/home/PASSection.astro';
import PersonalSection from '../components/home/PersonalSection.astro';
import ServicesPreview from '../components/home/ServicesPreview.astro';
import FinalCTA from '../components/home/FinalCTA.astro';

const title = 'Consultant SEO Shopify France | Anouar Boost';
const description =
    "J'aide les propriétaires de boutiques Shopify à doubler leur visibilité Google en 6 mois. +150% de trafic organique en moyenne. Audit gratuit.";
---

<BaseLayout title={title} description={description} includePersonSchema={true} includeServiceSchema={true}>
    <HeroSection />
    <SocialProofSection />
    <PASSection />
    <PersonalSection />
    <ServicesPreview />
    <FinalCTA />
</BaseLayout>
